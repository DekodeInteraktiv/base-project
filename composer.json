{
	"name": "dekode/project-base",
	"description": "Dekode WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
	"license": "GPL-3.0-or-later",
	"require": {
		"php": ">=8.1",
		"boxuk/wp-muplugin-loader": "~2.0.0",
		"composer/installers": "~2.2.0",
		"dekode/dekode-theme": "~1.0.0",
		"dekode/imagify-helper": "1.0.0",
		"dekodeinteraktiv/dekode-label-environment": "~1.0.0",
		"inpsyde/wp-translation-downloader": "~2.4.0",
		"johnpbloch/wordpress": "~6.2.2",
		"symfony/dotenv": "~6.2.0",
		"t2/t2": "~2.4.0",
		"wpackagist-plugin/imagify": "~2.1.0",
		"wpackagist-plugin/spinupwp": "~1.5.1",
		"wpackagist-plugin/two-factor": "~0.7.3"
	},
	"require-dev": {
		"dekode/coding-standards": "5.0.0",
		"dekode/logging": "1.0.0",
		"ergebnis/composer-normalize": "^2.29"
	},
	"repositories": {
		"mu-plugins": {
			"options": {
				"symlink": true
			},
			"type": "path",
			"url": "packages/mu-plugins/*"
		},
		"plugins": {
			"options": {
				"symlink": true
			},
			"type": "path",
			"url": "packages/plugins/*"
		},
		"themes": {
			"options": {
				"symlink": true
			},
			"type": "path",
			"url": "packages/themes/*"
		},
		"wpackagist": {
			"type": "composer",
			"url": "https://wpackagist.org"
		},
		"dekode-packages": {
			"type": "composer",
			"url": "https://packages.dekodes.no"
		},
		"t2-packages": {
			"type": "composer",
			"url": "https://t2-packages.teft.io"
		},
		"dekode-composer": {
			"type": "composer",
			"url": "https://composer.dekodes.no"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"boxuk/wp-muplugin-loader": true,
			"inpsyde/wp-translation-downloader": true,
			"johnpbloch/wordpress-core-installer": true,
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"ergebnis/composer-normalize": true
		},
		"platform": {
			"php": "8.1"
		},
		"sort-packages": true
	},
	"extra": {
		"installer-paths": {
			"public/content/mu-plugins/{$name}/": [
				"type:wordpress-muplugin"
			],
			"public/content/plugins/{$name}/": [
				"type:wordpress-plugin"
			],
			"public/content/themes/{$name}/": [
				"type:wordpress-theme"
			]
		},
		"wordpress-install-dir": "public/wp",
		"wp-translation-downloader": {
			"auto-run": false,
			"directory": "public/content/languages",
			"languages": [
				"nb_NO"
			]
		}
	},
	"scripts": {
		"post-install-cmd": [
			"cp public/content/plugins/spinupwp/drop-ins/object-cache.php public/content/object-cache.php",
			"mkdir -p public/content/languages && cp -r packages/translations/* public/content/languages/",
			"rm -rf public/wp/wp-content"
		],
		"post-update-cmd": [
			"@composer normalize"
		],
		"build": [
			"@composer install"
		],
		"build-for-deploy": [
			"@composer install --no-dev && composer build-translations"
		],
		"build-translations": [
			"rm -f wp-translation-downloader.lock",
			"@composer wp-translation-downloader:download"
		],
		"lint": [
			"./vendor/bin/phpcs ."
		]
	}
}
