{
	"name": "@dekode/project-base",
	"private": true,
	"engines": {
		"node": "18",
		"npm": ">=8",
		"yarn": "Please use npm"
	},
	"devDependencies": {
		"@theme-json/create": "^0.0.4",
		"@wordpress/eslint-plugin": "^17.5.0",
		"@wordpress/scripts": "^26.19.0",
		"@wordpress/stylelint-config": "^21.31.0",
		"autoprefixer": "^10.4.16",
		"browser-sync": "^3.0.2",
		"browser-sync-webpack-plugin": "^2.3.0",
		"concurrently": "^8.2.2",
		"css-clamp": "^1.1.0",
		"cssnano": "^6.0.2",
		"dotenv": "^16.3.1",
		"eslint-plugin-prettier": "^5.0.1",
		"fast-glob": "^3.2.12",
		"husky": "^8.0.3",
		"lint-staged": "^15.2.0",
		"postcss": "^8.4.32",
		"postcss-custom-media": "^10.0.2",
		"postcss-flexbugs-fixes": "^5.0.2",
		"postcss-import": "^15.1.0",
		"postcss-media-minmax": "^5.0.0",
		"postcss-mixins": "^9.0.4",
		"postcss-nesting": "^12.0.2",
		"prettier": "^3.1.1",
		"resolve-url-loader": "^5.0.0",
		"webpack-remove-empty-scripts": "^1.0.4"
	},
	"scripts": {
		"create-block": "cd packages/plugins && npx dekodeinteraktiv/create-project-base-block",
		"create-innerblock-block": "cd packages/plugins && npx dekodeinteraktiv/create-project-base-block --template innerblocks",
		"prepare": "husky install",
		"start": "concurrently npm:start:*",
		"start:theme-json": "theme-json watch",
		"start:wp-scripts": "wp-scripts start",
		"build": "concurrently npm:build:*",
		"build:theme-json": "theme-json build",
		"build:wp-scripts": "wp-scripts build",
		"format": "prettier --write .",
		"check-engines": "wp-scripts check-engines",
		"lint": "npm run lint:js && npm run lint:css",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"lint-staged": "lint-staged"
	},
	"lint-staged": {
		"*.css": [
			"wp-scripts lint-style"
		],
		"*.{js,ts,tsx}": [
			"prettier --write .",
			"wp-scripts lint-js"
		]
	},
	"css-clamp": {
		"minWidth": 512,
		"maxWidth": 2112
	}
}
